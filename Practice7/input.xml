<?xml version="1.0" encoding="utf-8"?>
<p7:knifes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:p7="http://nure.ua/hordiienko/practice7"
			xsi:schemaLocation="http://nure.ua/hordiienko/practice7 input.xsd">

    <!-- First Element-->
    <knife name="Felenge">
        <knifeType>knife</knifeType>
        <knifeHandy>1</knifeHandy>
        <knifeOrigin>France</knifeOrigin>
        <knifeVisual>
            <knifeBlade length="10" width="20" metal="copper"/>
            <knifeHandle>
                <plastic/>
            </knifeHandle>
        </knifeVisual>
        <collection>true</collection>
    </knife>

    <!-- Second Element-->
    <knife name="Apanch">
        <knifeType>dagger</knifeType>
        <knifeHandy>1</knifeHandy>
        <knifeOrigin>Austria</knifeOrigin>
        <knifeVisual>
            <knifeBlade length="90" width="20" metal="steel"></knifeBlade>
            <knifeHandle>
                <wood type="oak"></wood>
            </knifeHandle>
        </knifeVisual>
        <collection>false</collection>
    </knife>

    <!-- Third Element-->
    <knife name="Kauch">
        <knifeType>sword</knifeType>
        <knifeHandy>2</knifeHandy>
        <knifeOrigin>China</knifeOrigin>
        <knifeVisual>
            <knifeBlade length="120" width="30" metal="iron"></knifeBlade>
            <knifeHandle>
                <leatherCoated/>
            </knifeHandle>
        </knifeVisual>
        <collection>false</collection>
    </knife>
</p7:knifes>